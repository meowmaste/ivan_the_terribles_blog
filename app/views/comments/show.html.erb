<p id="notice"><%= notice %></p>

<p>
  <b>Body:</b>
  <%= @comment.body %>
</p>
<p>
  <b>Replies:</b>
  <% @comment.replies.each do |r| %>
  <p><%= r.body %></p>
  <% end %>
</p>

<p>
  <b>Post:</b>
  <%= @comment.post %>
</p>


